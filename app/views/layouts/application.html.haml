!!!
%html
  %head
    %title Bitácora Electrónica
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags 
  %body.modal-body
    .navbar.navbar-fixed-top.navbar-inverse
      .container-fluid
        .navbar-header
          %button.navbar-toggle{'data-toggle' => 'collapse', 'data-target' => '#main-navbar'}
            %span.sr-only Activar navegación
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Bitácora Electrónica', '/#!/folders', {:class => 'navbar-brand'}
        #main-navbar.navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li= link_to 'Carpetas', '/#!/folders', :id => 'folders-link'
            - if current_user.is_admin? || current_user.is_customer_service?
              %li= link_to 'Administración', '/#!/admin', :id => 'admin-link'
            - if current_user.laboratories.count > 0
              - if current_user.laboratories.count < 2
                - current_user.laboratories.each do |laboratory|
                  %li= link_to laboratory.name, "#!/laboratory/#{laboratory.id}"
              - else
                %li.dropdown
                  %a{:class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
                    = "Laboratorios"
                    %b.caret
                    %ul{:class => 'dropdown-menu'}
                      - current_user.laboratories.each do |laboratory|
                        %li= link_to laboratory.name, "#!/laboratory/#{laboratory.id}"

          %ul.nav.pull-right
            %li.dropdown
              %a{:class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
                = image_tag ("http://cimav.edu.mx/foto/#{current_user.email.split('@')[0]}/24")
                = current_user.full_name
                %b.caret
              %ul{:class => 'dropdown-menu'}
                %li
                  = link_to "/logout" do
                    %i.icon-off
                    = "Salir"

    #workarea
      = yield
      #flash-notice
