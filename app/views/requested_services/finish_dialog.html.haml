#finish-modal.modal.hide.fade{:tabindex => "-1", :role => "dialog", "aria-labelledby" => "finish-modal-label", "aria-hidden" => "true"}
  = form_for @requested_service, :remote => true, :html => {:'data-type' => 'html', :id => 'finish-sample-form'} do |f|
    .modal-header
      %button.close{"data-dismiss" => "modal", "aria-hidden" => "true"}= "Ã—"
      %h3#finish-modal-label= "Finalizar servicio #{@requested_service.number}"
    .modal-body
      = f.hidden_field :status, {:value => RequestedService::FINISHED}
      #field_service_request_sample_description
        = label_tag 'activity_log_msg', 'Notas:'
        = text_area_tag 'activity_log_msg', '', {:style => 'width: 515px;', :rows => 8}
    .modal-footer
      = button_tag "Finalizar el servicio", {:class => "btn btn-primary", :type => "submit"}
      %button.btn{"data-dismiss" => "modal", "aria-hidden" => "true"}= "Cerrar"