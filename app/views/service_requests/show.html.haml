#service-request-header
  .number= @request.number
  .description
    .service-link= "#{@request.request_type.name} #{@request.request_link}"
    = simple_format(@request.description)
  .clearfix
#request-workarea
- if @request.sample.count == 0
  #no-samples
    = 'La carpeta aún no tiene muestras.'
    %a{:id => 'add-new-sample-link'}= '¿Deseas agregar una?'
- else
  :javascript
    $(function() {
      getSample(#{@request.sample[0].id})
    })

#new-sample-dialog{:title => 'Nueva muestra'}
  %h1 Agregar nueva muestra
  = form_for Sample.new, :remote => true, :html => {:'data-type' => 'html', :id => 'new-sample-form'} do |f|
    = f.hidden_field :service_request_id, {:value => @request.id}
    #field_service_request_sample_identification
      = f.label :identification, 'Identificación de muestra:'
      = f.text_field :identification, :placeholder => 'Identificación de muestra'
    .clearfix
    #field_service_request_sample_description
      = f.label :description, 'Descripción:'
      = f.text_area :description, :placeholder => 'Descripción de la muestra'
    .clearfix
    #dialog-submit-button-area
      = f.submit "Agregar muestra"

:javascript
  $(function() {
    $("#new-sample-dialog").dialog({ autoOpen: false, width: 340, height: 380, modal:true })
  });

