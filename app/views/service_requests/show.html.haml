#folder-info
  .folder-icon
    %span.glyphicon.glyphicon-folder-close
    .folder-number= @request.number
  .folder-data
    .title
      = "#{@request.request_link}" rescue "Sin tipo"
    .description= @request.description

  .folder-actions
    %button.btn.btn-default.btn-block= "Editar"

  .folder-collaborators
    %h3 Colaboradores
    = image_tag (@request.user.avatar_url), :class => 'img-circle folder-owner'
    - if @request.supervisor
      = image_tag (@request.supervisor.avatar_url), :class => 'img-circle folder-supervisor'

#folder-workarea
  #folder-samples
    .header
      %h2 MUESTRAS
      .actions
        %button#add-new-sample-button.btn.btn-success.btn-xs{'data-id' => @request.id}
          %span.glyphicon.glyphicon-plus
    - @request.sample.each do |s|
      .sample-item
        .sample-item-info
          .data
            .identification
              = s.identification
              - if s.quantity > 1
                %span.badge= s.quantity
            .description= s.description
            .number= "ID: #{s.number}"
          .clearfix
        %div{:id => "sample-#{s.id}-services"}
          %table.table.table-hover.sample-services
            - if s.requested_service.count == 0
              %tr
                %td{:colspan => 3, :class => 'empty'}= "No tiene servicios"
            - s.requested_service.each do |rs|
              %tr{:class => 'requested-service-link', 'data-id' => rs.id, 'data-sample-id' => rs.sample_id, :id => "requested-service-link-#{rs.id}"}
                %td.icon{:class => rs.status_class}
                  %span.glyphicon{:class => rs.icon_class}
                %td.name= rs.laboratory_service.name
                %td.date= date_text(rs.created_at)
            %tr.add-service
              %td.icon
                %span.glyphicon.glyphicon-plus-sign
              %td.name.add-service-link{'data-sample-id' => s.id ,:colspan => 2}= "Agregar Servicio"

  #folder-work-panel-wrapper
    #folder-work-panel.inner-area