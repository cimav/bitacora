.header-status{:class => "bg-status-canceled"}
  %span.status= "Cancelar servicio"
  %a.close{:class => 'requested-service-link', 'data-id' => @requested_service.id, 'data-sample-id' => @requested_service.sample_id}="Ã—"
  %span.number= @requested_service.number
.dialog-content
  = form_for @requested_service, :remote => true, :html => {:'data-type' => 'html', :id => 'cancel-sample-form'} do |f|
    .dialog-title
      %h3= "Cancelar servicio"
    .dialog-body
      = f.hidden_field :status, {:value => RequestedService::CANCELED}
      .notes.field
        = label_tag 'activity_log_msg', 'Razones:'
        = text_area_tag 'activity_log_msg', '', {:class => 'form-control'}
    .dialog-footer
      .send-mail-footer
        = check_box_tag 'send_mail', 'yes', false, {:style => 'float: left;'}
        = label_tag 'send_mail', 'Enviar por correo.', {:style => 'margin-left: 4px; float: left;'}
      = button_tag "Cancelar", {:class => "btn btn-danger", :type => "submit"}


