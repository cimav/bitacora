!!!
%html
  %head
    %title Bit치cora Electr칩nica
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags 
  %body.modal-body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Bit치cora Electr칩nica', '/#!/folders', {:class => 'brand'}
          .nav-collapse
            %ul.nav
              %li= link_to 'Carpetas', '/#!/folders', :id => 'folders-link'
              - if current_user.laboratories.count > 0
                - if current_user.laboratories.count < 2
                  - current_user.laboratories.each do |laboratory|
                    %li= link_to laboratory.name, "#!/laboratory/#{laboratory.id}"
                - else
                  %li.dropdown
                    %a{:class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
                      = "Laboratorios"
                      %b.caret
                      %ul{:class => 'dropdown-menu'}
                        - current_user.laboratories.each do |laboratory|
                          %li= link_to laboratory.name, "#!/laboratory/#{laboratory.id}"

            %ul.nav.pull-right
              %li.dropdown
                %a{:class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
                  = image_tag ("http://cimav.edu.mx/foto/#{current_user.email.split('@')[0]}/24")
                  = current_user.full_name
                  %b.caret
                %ul{:class => 'dropdown-menu'}
                  %li
                    = link_to "/logout" do
                      %i.icon-off
                      = "Salir"
    #workarea
      = yield
