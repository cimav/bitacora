    .modal-header
      %button.close{"data-dismiss" => "modal", "aria-hidden" => "true"}= "Ã—"
      %h3#new-tech-modal-label= "Agregar Participante"
    .modal-body
      = f.hidden_field :requested_service_id, {:value => @requested_service.id}
      #field_service_request_sample_description
        = label_tag 'activity_log_msg', 'Razones:'
        = text_area_tag 'activity_log_msg', '', {:style => 'width: 515px;', :rows => 8}
