#my-requests-bar.workarea-bar
  %h2 Mis solicitudes
  #add-new-button-area
    = button_tag " + ", {:id => 'add-new-button', :title => 'Crear nueva solicitud'}
  #search-area
    = form_tag '/search', :id => 'live-search', :method => 'get', :remote => true do
      = text_field_tag :q, nil, :id => 'search-box', :placeholder => 'Busqueda'
#my-requests-area
  - if @latest_request.nil?
    #empty-requests= "No has solicitado nada."
  - else 
    :javascript
      $(function() {
        getServiceRequest("#{@latest_request.id}");
      });
